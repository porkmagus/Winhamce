<Page
    x:Class="Winhance.WinUI3.Features.Optimize.Views.SoundOptimizationsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:Winhance.WinUI3.Features.Optimize.ViewModels"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    d:DataContext="{d:DesignInstance Type=viewModels:SoundOptimizationsViewModel}"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="8" Padding="24,0,24,24">
            <!-- Category Header -->
            <toolkit:SettingsExpander 
                Header="Sound Optimizations"
                Description="Configure audio and sound-related settings"
                IsExpanded="True">
                
                <toolkit:SettingsExpander.HeaderIcon>
                    <FontIcon Glyph="&#xE767;"/> <!-- Volume icon -->
                </toolkit:SettingsExpander.HeaderIcon>

                <!-- Settings will be added here when ViewModel is migrated -->
                <toolkit:SettingsExpander.Items>
                    <!-- Example setting item -->
                    <toolkit:SettingsCard 
                        Header="Example Sound Setting"
                        Description="This is a placeholder for sound optimization settings">
                        <ToggleSwitch />
                    </toolkit:SettingsCard>
                </toolkit:SettingsExpander.Items>
            </toolkit:SettingsExpander>

            <!-- Placeholder InfoBar -->
            <InfoBar 
                Title="Migration In Progress"
                Message="Sound optimization settings are being migrated from WPF. Settings will appear here once the ViewModel is fully ported."
                Severity="Informational"
                IsOpen="True"
                IsClosable="True"/>
        </StackPanel>
    </ScrollViewer>
</Page>
