<Window
    x:Class="Winhance.WinUI3.Features.Common.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- App Icon and Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                <Image Source="/Assets/winhance-rocket.ico" Width="24" Height="24" Margin="0,0,12,0"/>
                <TextBlock Text="Winhance" 
                           Style="{StaticResource TitleTextBlockStyle}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Window Controls would go in Column 2 -->
        </Grid>

        <!-- Navigation View -->
        <NavigationView Grid.Row="1"
                        x:Name="NavView"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="False"
                        PaneDisplayMode="Left"
                        SelectionChanged="NavView_SelectionChanged">
            
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Software Apps" 
                                    Tag="SoftwareApps"
                                    Icon="AllApps"/>
                <NavigationViewItem Content="Optimize" 
                                    Tag="Optimize"
                                    Icon="Repair"/>
                <NavigationViewItem Content="Customize" 
                                    Tag="Customize"
                                    Icon="Edit"/>
                <NavigationViewItem Content="Advanced Tools" 
                                    Tag="AdvancedTools"
                                    Icon="More"/>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="Settings" 
                                    Tag="Settings"
                                    Icon="Setting"/>
            </NavigationView.FooterMenuItems>

            <!-- Content Frame -->
            <Frame x:Name="ContentFrame"/>
        </NavigationView>

        <!-- Overlay for Dialogs -->
        <Grid x:Name="DialogOverlay" 
              Grid.Row="0"
              Grid.RowSpan="2"
              Background="{ThemeResource SystemControlAcrylicElementBrush}"
              Visibility="{x:Bind ViewModel.IsDialogOverlayVisible, Mode=OneWay}"
              Canvas.ZIndex="100"/>
    </Grid>
</Window>
