<Page
    x:Class="Winhance.WinUI3.Features.Common.Views.WinhanceSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <StackPanel Spacing="16">
            <TextBlock Text="Settings" 
                       Style="{StaticResource TitleTextBlockStyle}"/>
            
            <TextBlock Text="Application settings and preferences" 
                       Style="{StaticResource BodyTextBlockStyle}"
                       Opacity="0.7"/>

            <InfoBar Title="Work in Progress"
                     Message="This view is being migrated from WPF to WinUI 3"
                     Severity="Informational"
                     IsOpen="True"
                     IsClosable="False"/>
        </StackPanel>
    </Grid>
</Page>
